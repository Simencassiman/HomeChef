<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <ImageView
        android:id="@+id/nr_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/circle"
        android:layerType="software"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_instruction_nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/nr_circle"
        app:layout_constraintBottom_toBottomOf="@+id/nr_circle"
        app:layout_constraintLeft_toLeftOf="@id/nr_circle"
        app:layout_constraintRight_toRightOf="@id/nr_circle"/>

    <TextView
        android:id="@+id/tv_instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruction_nr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/step_separator"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruction_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>